# Server Configuration
PORT=3000
NODE_ENV=development

# Database Configuration (PostgreSQL with Sequelize)
DATABASE_URL=postgresql://username:password@localhost:5432/college_placement_db
DB_HOST=localhost
DB_PORT=5432
DB_NAME=college_placement_db
DB_USER=postgres
DB_PASSWORD=your_password_here
DB_DIALECT=postgres
DB_POOL_MAX=5
DB_POOL_MIN=0
DB_POOL_ACQUIRE=30000
DB_POOL_IDLE=10000

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production
JWT_EXPIRE=7d
JWT_REFRESH_SECRET=your_refresh_token_secret_key
JWT_REFRESH_EXPIRE=30d

# Email Configuration (Nodemailer)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-specific-password
EMAIL_FROM=noreply@collegeplacement.com

# Gmail OAuth2 Configuration (for sending emails via Gmail API)
GMAIL_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GMAIL_CLIENT_SECRET=your-google-client-secret
GMAIL_REDIRECT_URI=http://localhost:3000/auth/callback
GMAIL_REFRESH_TOKEN=your-gmail-refresh-token
GMAIL_ACCESS_TOKEN=your-gmail-access-token

# File Upload Configuration
MAX_FILE_SIZE=5242880
UPLOAD_PATH=./uploads
ALLOWED_FILE_TYPES=.pdf,.doc,.docx

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:5173

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# AI Integration (Optional)
OPENAI_API_KEY=your_openai_api_key_here
AI_MODEL=gpt-4

# Google Gemini API Configuration (for ATS Resume Scoring)
GEMINI_API_KEY=AIzaSyAsyKoETWSUCFLRHTuFhAXn3wT2MrfSXhg
GEMINI_MODEL=gemini-1.5-flash

